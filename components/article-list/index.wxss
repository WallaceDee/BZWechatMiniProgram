.popup {
  position: absolute;
  background: #000;
  left: 15px;
  right: 15px;
  z-index: 99;
}
.section {
  padding-left: 15px;
  position: relative;
}
.section.list {
  padding-left: 0 ;
}
.section.list:before {
  display: none;
}
.section .time-title {
  display: block;
  background-color: #fff;
  color: #353839;
  font-size: 17px;
  font-weight: bold;
  position: relative;
  overflow: hidden;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 3;
  height: 35px;
  line-height: 35px;
}
.section .time-title::before {
  content: "";
  display: inline-block;
  width: 9px;
  height: 9px;
  background-color: #FFAB00;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: 2px;
  position: relative;
  z-index: 2;
}
.section .time-title::after {
  content: "";
  display: block;
  width: 1px;
  height: 999px;
  border-left: 1px dashed #f8f8f8;
  position: absolute;
  left: 4px;
  top: 0;
  z-index: 0;
}
.section .item {
  position: relative;
  overflow: hidden;
}
.section .item::before {
  content: "";
  display: block;
  width: 1px;
  height: 999px;
  border-left: 1px dashed #f8f8f8;
  position: absolute;
  left: 4px;
  top: 0;
  z-index: 0;
}
.section .item .time {
  font-size: 13px;
  color: #353839;
}
.section .item .time::before {
  content: "";
  background-color: #fff;
  display: inline-block;
  width: 5px;
  height: 5px;
  border: 2px #FFAB00 solid;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: 1px;
  position: relative;
  z-index: 2;
}
.section .item .time.no-dot::before {
  display: none;
}
.section .item .article {
  position: relative;
  margin-left: 15px;
  margin-right: 0;
  padding-right: 15px;
  padding-bottom: 5px;
}
.section .item .article .title {
  display: block;
  width: 100%;
  font-weight: bold;
  font-size: 15px;
  color: #353839;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 8px;
  margin-bottom: 5px;
}
.section .item .article .content {
  color: #878E90;
  height: 88px;
  font-size: 13px;
  line-height: 22px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.section .item .article .buttons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 13px;
  margin-top: 8px;
  padding-right: 20px;
  height: 30px;
}
.section .item .article .buttons .button {
  display: flex;
  align-items: center;
  height: 30px;
  padding: 0 10px;
}
.section .item .article .buttons .button .button-text {
  line-height: 20px;
}
.section .item .article .buttons .button .icon {
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  margin-right: 4px;
}
.section .item .article .buttons .share-btn {
  margin: 0;
  color: #000;
  font-size: 14px;
  background-color: transparent;
  padding: 0;
}
.section .item .article .buttons .share-btn:after {
  display: none;
}
.section .item .article::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
}
