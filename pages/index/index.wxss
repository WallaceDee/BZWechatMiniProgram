page {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container {
  position: relative;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex: 1;
}
.container .banner {
  margin: 5px 15px 0 15px;
}
.container .banner swiper {
  height: 100px;
  border-radius: 8px;
  overflow: hidden;
}
.container .banner swiper-item {
  background-color: #eee;
}
.container .filter-bar {
  position: relative;
  margin-top: 30px;
  display: flex;
  padding: 0 15px;
  justify-content: space-between;
  align-items: center;
}
.container .filter-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
}
.container .filter-bar .search {
  display: inline-block;
  flex-shrink: 0;
  padding: 0 10px;
  border-radius: 15px;
  height: 30px;
  background-color: #F9F6F6;
  color: #C3C6C7;
  display: flex;
  align-items: center;
}
.container .filter-bar .search image {
  width: 16px;
  height: 16px;
}
.container .filter-bar .search text {
  font-size: 13px;
  margin-left: 5px;
}
.container .filter-bar i-tabs {
  width: 80%;
  margin-left: 20px;
}
.container .filter-bar i-tabs .filter-tabs::after {
  display: none;
}
.container .filter-bar i-tabs .filter-tabs .filter-title {
  font-size: 15px;
  color: #353839;
}
.container .filter-bar i-tabs .filter-tabs .filter-title-active {
  font-weight: bold;
  text-align: center;
}
.container .list {
  flex: 1;
}
.container .list .section {
  padding-left: 15px;
  padding-top: 15px;
  position: relative;
  overflow: hidden;
}
.container .list .section::before {
  content: "";
  display: block;
  width: 1px;
  height: 9999px;
  border-left: 1px dashed #f8f8f8;
  position: absolute;
  left: 19px;
  top: 0;
  z-index: 0;
}
.container .list .section > text {
  color: #353839;
  font-size: 17px;
  font-weight: bold;
}
.container .list .section > text::before {
  content: "";
  display: inline-block;
  width: 9px;
  height: 9px;
  background-color: #FFAB00;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: 2px;
  position: relative;
  z-index: 2;
}
.container .list .section .item > text {
  font-size: 13px;
  color: #353839;
}
.container .list .section .item > text::before {
  content: "";
  display: inline-block;
  width: 5px;
  height: 5px;
  border: 2px #FFAB00 solid;
  border-radius: 50%;
  margin-right: 8px;
  vertical-align: 1px;
  position: relative;
  z-index: 2;
}
.container .list .section .item > view {
  position: relative;
  margin-left: 15px;
  margin-right: 0;
  padding-right: 15px;
  padding-bottom: 15px;
}
.container .list .section .item > view .title {
  display: block;
  width: 100%;
  font-weight: bold;
  font-size: 15px;
  color: #353839;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 8px;
  margin-bottom: 5px;
}
.container .list .section .item > view .content {
  color: #878E90;
  height: 88px;
  font-size: 13px;
  line-height: 22px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}
.container .list .section .item > view .buttons {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  margin-top: 10px;
  padding-right: 20px;
}
.container .list .section .item > view .buttons > view {
  display: flex;
  align-items: center;
  height: 20px;
}
.container .list .section .item > view .buttons > view text {
  line-height: 20px;
}
.container .list .section .item > view .buttons > view image {
  display: inline-block;
  vertical-align: middle;
  width: 18px;
  height: 18px;
  margin-right: 4px;
}
.container .list .section .item > view::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
}
.nav-tabs::after {
  display: none;
}
.nav-tabs .nav-title {
  font-size: 18px;
  color: #353839;
  margin: 0 18px;
}
.nav-tabs .nav-title-active {
  font-weight: bold;
  color: #353839;
  position: relative;
  z-index: 2;
}
.nav-tabs .nav-title-active::after {
  content: "";
  display: block;
  width: 100%;
  height: 4px;
  background-color: #80D7DB;
  position: absolute;
  bottom: -1px;
  z-index: -1;
}
.nav-tabs .nav-tab .no-underline {
  display: none;
}
