.userInfo {
  display: flex;
  padding: 0 20px;
  margin-bottom: 30px;
}
.userInfo .login {
  background-color: transparent;
  display: inline;
  padding: 0;
  line-height: initial;
}
.userInfo .login::after {
  display: none;
}
.userInfo .gender {
  position: absolute;
  background-color: #fff;
  text-align: center;
  z-index: 2;
  right: 0;
  bottom: 0;
  width: 24px;
  height: 24px;
  line-height: 24px;
  border-radius: 50%;
}
.userInfo .gender > image {
  width: 16px;
  height: 16px;
}
.userInfo .gender > image:last-child {
  display: none;
}
.userInfo .gender.female > image:last-child {
  display: inline-block;
}
.userInfo .gender.female > image:first-child {
  display: none;
}
.userInfo .avatar {
  width: 60px;
  height: 60px;
  box-shadow: 0px 0px 4px 0px rgba(53, 56, 57, 0.1);
  border: 1px solid #ffffff;
  border-radius: 50%;
}
.userInfo .nickname,
.userInfo .login {
  font-size: 20px;
  color: #373737;
}
.userInfo .company {
  color: #999;
  font-size: 14px;
}
.userInfo > view:first-child {
  flex-shrink: 0;
}
.userInfo > view:last-child {
  position: relative;
  margin-left: 16px;
  width: 70%;
  display: flex;
  align-items: center;
}
.userInfo > view:last-child > view {
  width: 100%;
}
.userInfo > view:last-child > view > view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.icon {
  width: 20px;
  height: 20px;
  vertical-align: -2px;
}
.cell-btn {
  position: relative;
  padding: 12px 15px;
  display: flex;
  background: #fff;
  align-items: center;
  line-height: 1.4;
  font-size: 14px;
  overflow: hidden;
  color: #353839;
}
.cell-btn:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-bottom-width: 1px;
  left: 15px;
  right: 0;
}
.cell-btn .icon {
  margin-right: 5px;
}
.cell-btn .i-cell-bd {
  flex: 1;
}
.cell-btn .i-cell-bd .i-cell-text {
  line-height: 24px;
  font-size: 14px;
  text-align: left;
}
.cell-btn .i-cell-ft {
  position: relative;
  text-align: right;
  color: #495060;
}
.cell-btn.i-cell-access .i-cell-ft {
  padding-right: 13px;
  position: relative;
  text-align: right;
  color: #495060;
}
.cell-btn.i-cell-access .i-cell-ft:after {
  content: " ";
  display: inline-block;
  width: 6px;
  height: 6px;
  position: absolute;
  top: 50%;
  right: 2px;
  border-width: 2px 2px 0 0;
  border-color: #dddee1;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
