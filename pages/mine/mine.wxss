.userInfo {
  display: flex;
  padding: 0 20px;
}
.userInfo .avatar {
  width: 60px;
  height: 60px;
  box-shadow: 0px 0px 4px 0px rgba(53, 56, 57, 0.1);
  border: 1px solid #ffffff;
  border-radius: 50%;
}
.userInfo .nickname {
  font-size: 20px;
  color: #373737;
}
.userInfo .company {
  color: #999;
  font-size: 14px;
}
.userInfo > view:first-child {
  flex-shrink: 0;
}
.userInfo > view:last-child {
  margin-left: 16px;
  width: 70%;
  display: flex;
  align-items: center;
}
.userInfo > view:last-child > view > view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.icon {
  width: 20px;
  height: 20px;
  vertical-align: -2px;
}
