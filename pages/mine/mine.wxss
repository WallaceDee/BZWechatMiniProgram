.userInfo {
  display: flex;
  padding: 0 20px;
  margin-bottom: 30px;
}
.userInfo .login {
  background-color: transparent;
  display: inline;
  padding: 0;
  line-height: initial;
}
.userInfo .login::after {
  display: none;
}
.userInfo .gender {
  position: absolute;
  background-color: #fff;
  text-align: center;
  z-index: 2;
  right: 0;
  bottom: 0;
  width: 24px;
  height: 24px;
  line-height: 24px;
  border-radius: 50%;
}
.userInfo .gender > image {
  width: 16px;
  height: 16px;
}
.userInfo .gender > image:last-child {
  display: none;
}
.userInfo .gender.female > image:last-child {
  display: inline-block;
}
.userInfo .gender.female > image:first-child {
  display: none;
}
.userInfo .avatar {
  width: 60px;
  height: 60px;
  box-shadow: 0px 0px 4px 0px rgba(53, 56, 57, 0.1);
  border: 1px solid #ffffff;
  border-radius: 50%;
}
.userInfo .nickname,
.userInfo .login {
  font-size: 20px;
  color: #373737;
}
.userInfo .company {
  color: #999;
  font-size: 14px;
}
.userInfo > view:first-child {
  flex-shrink: 0;
}
.userInfo > view:last-child {
  position: relative;
  margin-left: 16px;
  width: 70%;
  display: flex;
  align-items: center;
}
.userInfo > view:last-child > view {
  width: 100%;
}
.userInfo > view:last-child > view > view {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.icon {
  width: 20px;
  height: 20px;
  vertical-align: -2px;
}
